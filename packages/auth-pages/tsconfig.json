{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      //"auth-lib": ["../../packages/auth-lib/dist",]  // acc√®s direct si besoin
    },
    "types": ["unplugin-vue-router/client"],
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src","types", "vite/client"],
  "exclude": ["node_modules", "dist"]
}